<html lang="en">
<head>
    <!-- <meta> tags> -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <title>Authentication practice</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Backend-practice</a>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="#" id="home_b">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#" id="profile_b">Profile <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            {{#if isLoggenIn}}
                <button type="button" class="btn btn-light" id="logout_b">
                Logout
                 </button>
            {{else}}
                <button type="button" class="btn btn-light" id="login_b">
                Login
                 </button>
             {{/if}}
        </div>
    </nav>
    <div class="container">
        {{{body}}}
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script>
        const Profile = document.querySelector('#profile_b');
        Profile.addEventListener('click', () => window.location.replace('http://localhost:3000/profile'))
        const Home = document.querySelector('#home_b');
        Home.addEventListener('click', () => window.location.replace('http://localhost:3000/'))
        
        {{#if isLoggenIn}}
            const Logout = document.querySelector('#logout_b');
            Logout.addEventListener('click', () => window.location.replace('http://localhost:3000/auth/logout'))
        {{else}}
            const Login = document.querySelector('#login_b');
            Login.addEventListener('click', () => window.location.replace('http://localhost:3000/auth/login'))
        {{/if}}
